<section class="h-screen bg-back relative">
  <%if notice %>
  <div class="absolute top-5 right-2 bg-white border border-teal-500 rounded text-teal-900 px-4 py-3 shadow-md w-50" role="alert">
    <div class="flex">
      <div class="py-1 text-second"><svg class="fill-current h-6 w-6 text-teal-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg></div>
      <div>
        <p class="font-proxima font-bold text-darktext" id="notice"><%= notice %></p>
      </div>
    </div>
  </div>
  <%end%>

  <nav class="bg-main py-4 px-4">
    <ul class="flex justify-between items-center container mx-auto">
      <li>
        <%= link_to groups_path do %>
        <i class="fa fa-arrow-left text-white cursor-pointer"></i>
        <%end%>
      </li>
      <li>
        <p class="text-white font-proxima">TRANSACTIONS</p>
      </li>
      <li>
        <i class="fa fa-search text-white cursor-pointer"></i>
      </li>
    </ul>
  </nav>

  <div class="px-4 py-4 bg-white text-center container mx-auto">
    <div class="container mx-auto">
      <p class="font-proxima text-gray-500"><%= @category.name %></p>
    </div>
  </div>
  
  <div class="px-4 py-4 flex justify-between items-center bg-white container mx-auto">
    <p class="font-proxima text-gray-500">Total of transactions:</p>
    <p class="font-bold font-proxima">$<%= @category.total_amount %></p>
  </div>

  <ul class="w-full px-4 mt-2 space-y-2 overflow-auto sm:px-0 container mx-auto">
    <% @purchases.each do |purchase| %>
      <li class="grid grid-cols-6 bg-white space-x-2 p-2 border border-gray-200">
        <div class="text-center p-2 image">
          <%= image_tag("checklist.png", :alt => "purchase check") %>
        </div>
        <div class="col-start-2 col-span-4 text-gray-400 font-proxima">
          <%= purchase.name %>
        </div>
        <div class="text-right">
          <p class="font-bold font-proxima">$<%= purchase.amount %></p>
        </div>
      </li>
    <% end %>
  </ul>

<div class="bg-second py-8 absolute inset-x-0 bottom-0 text-center">
  <div class="container mx-auto">
    <%= link_to 'ADD NEW TRANSACTION', new_group_purchase_path, class: "text-center text-white py-4 px-20
   font-proxima border-2 border-bg-white rounded-lg cursor-pointer" %>
  </div>
</div>
</section>
