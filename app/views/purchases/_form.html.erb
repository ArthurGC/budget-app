<%= form_with(model: [@category, @purchase]) do |form| %>

  <div class="field">
    <%= form.text_field :name, placeholder: "Name",
    class: "py-3 px-4 border border-bg-darktext w-full font-proxima font-normal" %>
  </div>

  <div class="field">
    <%= form.text_field :amount, placeholder: "Amount",
    class: "py-3 px-4 border border-bg-darktext w-full font-proxima font-normal" %>
  </div>

  <% if purchase.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

    <ul>
      <% purchase.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="bg-second py-4 absolute inset-x-0 bottom-0 text-center">
  <%= form.submit 'ADD TRANSACTION', class: "bg-transparent text-center text-white py-4 px-20
   font-proxima border-2 border-bg-white rounded-lg cursor-pointer" %>
</div>

<% end %>
