<section class="h-screen bg-back">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <nav class="bg-main py-2 px-4">
    <ul class="flex justify-between items-center">
      <li>
        <%= link_to root_path do %>
        <i class="fa fa-arrow-left text-white cursor-pointer"></i>
        <%end%>
      </li>
      <li>
        <p class="text-white font-proxima">LOGIN</p>
      </li>
      <li>
        <%= f.submit "Log in", class: "text-white font-proxima bg-transparent cursor-pointer" %>
      </li>
    </ul>
  </nav>

  <div class="field mt-2">
    <%= f.email_field :email, autofocus: true,
     autocomplete: "email", placeholder: "Email",
      class: "py-3 px-4 border border-bg-darktext w-full font-proxima font-normal" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password",
     placeholder: "Password",
      class: "py-3 px-4 border border-bg-darktext w-full font-proxima font-normal" %>
  </div>

<% end %>

<div class="text-center pt-4 bg-transparent text-gray-400 hover:underline font-proxima">
  <%= link_to "Sign up", new_registration_path(resource_name) %>
</div>

<div class="text-center py-4 bg-transparent text-gray-400 hover:underline font-proxima">
  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</div>

</section>


